class TriangleShape extends Path2D.Double {
  public TriangleShape(Point2D p1, Point2D p2, Point2D p3) {
    moveTo(p1.getX(), p1.getY());
    lineTo(p2.getX(), p2.getY());
    lineTo(p3.getX(), p3.getY());
    closePath();
  }
}

