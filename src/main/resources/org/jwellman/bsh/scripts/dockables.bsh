/*------- Step 1 -------*/
import org.jwellman.virtualdesktop.vapps.*;

x = new SpecDocking("JVD Dockable");
DesktopManager.get().createVApp(x);
// ===== end step 1 ===== */


/*------- Step 2 -------
jvd.cc = new JColorChooser();
jvd.cc.setTransferHandler( new TransferHandler("color")  );
jvd.cc.setDragEnabled(true);
x.addDockable( "Color Chooser", jvd.cc );
// ===== end step 2 ===== */


