    setWeekOfYearVisible() {
        print("setWeekOfYearVisible to: " + this.logical);
        this.panel.setWeekOfYearVisible(this.logical);                
    }

    setFont() {
        print("Setting font to: " + this.font);
        this.panel.setFont(this.font);        
    }

